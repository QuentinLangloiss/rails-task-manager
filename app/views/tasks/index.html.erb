<div class="mt-3 ms-4 w-25">
<h1>My tasks</h1>
<ul class="list-group">
  <% @tasks.each do |task| %>
    <li class="list-group-item fs-5"><input class="form-check-input" type="checkbox" value="" id="flexCheckDefault" <%= 'checked' if task.completed %>>
    <%= link_to task.title, task_path(task) %>
    <%= link_to "", task_path(task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "fa-solid fa-trash-can" %></li>
  <% end %>
</ul>
<%= link_to "Add a new task", "/tasks/new", class: "fa-solid fa-plus text-decoration-none mt-3" %>
</div>
