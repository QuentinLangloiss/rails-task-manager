<div class="mt-3 ms-3">
<%= form_with model: @task do |f| %>
  <%= f.label :title %>
  <br>
  <%= f.text_field :title %>
  <br>
  <br>
  <%= f.label :details %>
  <br>
  <%= f.text_field :details %>
  <br>
  <br>
  <p><%= f.check_box :completed %></p>
  <%= f.label :completed %>
  <br>
  <%= f.submit %>
<% end %>
<%= link_to " Back to list", "/tasks", class: "fa-solid fa-rotate-left text-decoration-none mt-4" %>
</div>
